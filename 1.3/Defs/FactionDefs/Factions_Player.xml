<Defs>

	<!-- Ashlander -->
	
	<FactionDef ParentName="PlayerFactionBase">
		<defName>ESCP_AshlanderPlayerTribe</defName>
		<label>New Ashlander Tribe</label>
		<description>A small Ashlander tribe.</description>
		<isPlayer>true</isPlayer>
		<pawnSingular>Ashlander tribseman</pawnSingular>
		<pawnsPlural>Ashlander tribsepeople</pawnsPlural>
		<basicMemberKind>ESCP_AshlanderTribalKind</basicMemberKind>

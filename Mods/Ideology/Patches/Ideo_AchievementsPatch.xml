<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Achievements Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>


				<li Class="PatchOperationAdd"> 
					<xpath>/Defs</xpath>
					<value>

						<AchievementsExpanded.AchievementDef>
							<defName>ESCP_AchievementDunmer_AncestorKnowledgeMaster</defName>
							<label>Passing on, and then Passing on Knowledge</label>
							<description>Have pawns gain ancestral knowledge a total of 25 times</description>
							<bgtexPath>Achievements/ESCP_AchievementBackgroundDunmer</bgtexPath>
							<tab>ESCP_AchievementsTab</tab>
							<tracker Class="Mashed_VanillaAchievementsExpanded.HediffTracker_WithDefList">
								<defList>
									<li>ESCP_DunmerAncestralHealing</li>
									<li>ESCP_DunmerAncestralGuidance</li>
									<li>ESCP_DunmerAncestralProtection</li>
									<li>ESCP_DunmerAncestralSight</li>
									<li>ESCP_DunmerAncestralWisdom</li>
								</defList>
								<count>25</count>
							</tracker>

							<texPath>Achievements/ESCP_AchievementDunmer_AncestorKnowledgeMaster</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>

					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>


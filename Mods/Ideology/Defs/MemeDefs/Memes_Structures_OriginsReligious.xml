<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Tribunal -->

	<MemeDef>
		<defName>ESCP_Structure_OriginTribunal</defName>
		<label>Tribunal Temple origin</label>
		<description>This is a variant of the embodied theist structure. This ideoligion is a descendant of the Tribunal Temple, a religious sect focused on worshipping the Living Gods of Morrowind, once ordinary Chimer who tapped into an ancient power. It may have very different precepts than those of thousands of years ago, but its symbols are similar.</description>
		<modExtensions>
			<li Class="ESCP_RaceTools.IdeoOrginProperties">
				<IgnoreDuplicateDeityNames>true</IgnoreDuplicateDeityNames>
            </li>
		</modExtensions>
		<iconPath>UI/Structures/ESCP_OriginTribunal</iconPath>
		<deityCount>3</deityCount>
		<allowSymbolsFromDeity>false</allowSymbolsFromDeity>
		<symbolPackOverride>true</symbolPackOverride>
		<worshipRoomLabel>temple</worshipRoomLabel>
		<category>Structure</category>
		<impact>0</impact>
		<requiredRituals>
		</requiredRituals>
		<consumableBuildings>
		</consumableBuildings>
		<requireAnyRitualSeat>
		</requireAnyRitualSeat>
		<generalRules>
		  <rulesStrings>
			<li>memeCreed->sect</li>
			<li>memeCreed->cult</li>
			<li>memeCreed->temple</li>
			<li>memeCreed->faith</li>
			<li>memeLeaderNoun->patriarch</li>
			<li>memeLeaderAdjective->chosen</li>
			<li>memeLeaderAdjective->divine</li>
			<li>memeLeaderAdjective->blessed</li>
			<li>memeMoralist->priest</li>
			<li>memeMoralist->cleric</li>
			<li>memeMoralist->preacher</li>
		  </rulesStrings>
		</generalRules>
	   <descriptionMaker>
		 <patterns>
		   <li><def>TheistMyth</def></li>
		   <li><def>TheistFounder</def></li>
		 </patterns>
		 <constants>
		   <li><key>structure_theist</key><value>true</value></li>
		   <li><key>ESCP_Structure_OriginTribunal</key><value>true</value></li>
		 </constants>
	   </descriptionMaker>
	   <symbolPacks>
		  <li><ideoName>Tribunal Temple</ideoName><adjective>Acolyte</adjective><member>Acolyte</member><prefix>true</prefix></li>
		  <li><ideoName>The Tribunal Temple</ideoName><adjective>Acolyte</adjective><member>Acolyte</member><prefix>true</prefix></li>
		  <li><ideoName>The Temple of Almsivi</ideoName><adjective>Acolyte</adjective><member>Acolyte</member><prefix>true</prefix></li>
		  <li><ideoName>Temple of the Living Gods</ideoName><adjective>Acolyte</adjective><member>Acolyte</member><prefix>true</prefix></li>
		</symbolPacks>
		<fixedDeityNameTypes>
		  <li><name>Almalexia</name><type>the Lady of Mercy</type></li>
		  <li><name>Sotha Sil</name><type>the Clockwork God</type></li>
		  <li><name>Vivec</name><type>the Warrior Poet</type></li>
		</fixedDeityNameTypes>
		<thingStyleCategories>
		  <li>
			<category>ESCP_DunmerTribunal</category>
			<priority>4</priority>
		  </li>
		</thingStyleCategories>
	</MemeDef>
	
